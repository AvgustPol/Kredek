@model Kredek.Data.Models.ContentElementTranslationTemplates.FaqElement

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<input type="hidden" name="Type" value="FaqElement" />

<div class="form-group">
    <label asp-for="@Model.Question" class="control-label"></label>
    <input asp-for="@Model.Question" class="form-control" />
    <span asp-validation-for="@Model.Question" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.Answer" class="control-label"></label>
    <input asp-for="@Model.Answer" class="form-control" />
    <span asp-validation-for="@Model.Answer" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="@Model.LanguageId" class="control-label"></label>
    <select asp-for="@Model.LanguageId" class="form-control" asp-items="ViewBag.Languages"></select>
</div>