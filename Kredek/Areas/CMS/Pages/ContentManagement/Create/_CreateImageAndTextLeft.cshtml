@model Kredek.Data.Models.ContentElementTranslationTemplates.ImageAndTextLeft

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<input type="hidden" name="Type" value="ImageAndTextLeft" />

<div class="form-group">
    <label asp-for="@Model.Text" class="control-label"></label>
    <input asp-for="@Model.Text" class="form-control" />
    <span asp-validation-for="@Model.Text" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.Title" class="control-label"></label>
    <input asp-for="@Model.Title" class="form-control" />
    <span asp-validation-for="@Model.Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.LanguageId" class="control-label"></label>
    <select asp-for="@Model.LanguageId" class="form-control" asp-items="ViewBag.Languages"></select>
</div>

@await Html.PartialAsync("_DownloadImagePartial")