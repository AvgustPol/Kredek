@page
@model Kredek.Areas.CMS.Pages.WebsitePageManagement.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>All pages</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WebsitePage[0].IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WebsitePage[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WebsitePage)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.WebsitePageId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.WebsitePageId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.WebsitePageId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>