@page
@model Kredek.Areas.CMS.Pages.ContentElementManagement.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ContentElement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContentElement.ContentElementId" />
            <div class="form-group">
                <label asp-for="ContentElement.Position" class="control-label"></label>
                <input asp-for="ContentElement.Position" class="form-control" />
                <span asp-validation-for="ContentElement.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentElement.WebsitePageId" class="control-label"></label>
                <select asp-for="ContentElement.WebsitePageId" class="form-control" asp-items="ViewBag.WebsitePageId"></select>
                <span asp-validation-for="ContentElement.WebsitePageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}