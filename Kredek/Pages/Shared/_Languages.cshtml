@model IndexModel

<li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <img height="20" width="20" src="~/img/@(Model.CurrentLanguage).png" />
    </a>

    <div class="dropdown-menu">
        @foreach (var language in Model.Languages)
        {
            string languageCode = language.ISOCode;
            <form asp-page-handler="ChangeLanguage" asp-route-language="@languageCode" asp-route-pageName="@Model.CurrentPage.Name" method="post">
                <button class="dropdown-item" disabled>
                    <img height="20" width="20" src="~/img/@(languageCode).png" />&nbsp&nbsp @(language.Name)
                </button>
            </form>
        }

        <button class="dropdown-item" disabled>
           Tak, będą i inne ;) 
        </button>
    </div>
</li>