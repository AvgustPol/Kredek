                string textInfo4 = "Brzmi ciekawie? Nie zwlekaj z decyzją i weź udział w naszym kursie, czekamy na Ciebie.";


                ImageAndTextTemplateViewModel imageAndText1 = new ImageAndTextTemplateViewModel()
