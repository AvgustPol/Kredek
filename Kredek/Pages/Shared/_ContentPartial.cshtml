@using Kredek.Data.Models.ContentElementTranslationTemplates;
@using Kredek.Data.Templates
@using Kredek.Data.ViewModels
@model IndexModel

@foreach (var element in Model.CurrentPageElements)
{
    switch (element)
    {
        case TextSeparatedByLine modelTextSeparatedByLine:
            @await Html.PartialAsync("PartialTemplates/_TextSeparatedByLinePartial", modelTextSeparatedByLine);
            break;
        case ImageAndTextLeft modelImageAndTextLeft:
            @await Html.PartialAsync("PartialTemplates/_ImageAndTextLeft", modelImageAndTextLeft);
            break;
        case FaqElement modelFaqElement:
            @await Html.PartialAsync("PartialTemplates/_FaqElementPartial", modelFaqElement);
            break;

    }
}

@{
    switch (Model.CurrentPage.Name)
    {
        case "Blog":
            {
                @await Html.PartialAsync("PartialTemplates/_BlogPartial", await Model.GetFacebookPostsAsync());
            }
            break;
        case "Contact":
            {
                @await Html.PartialAsync("PartialTemplates/_BannerPartial", new FullWidthBanner() { Text = "Kontakt", BackgroundImageUrl = "img/staticImages/bannerContact.jpg" });

                <style>
                    .contact-page hr {
                        max-width: 50%;
                        border-top: 5px solid #000000;
                    }
                </style>
                <br />
                <div class="text-center contact-page">
                    <h1>Szybki </h1>
                    <p class="display-2" style="color: #3C5A99 !important">
                        <i class="fab fa-facebook-square"></i>
                        <a target="_blank" href="https://www.facebook.com/KNKredek/"><b>Facebook</b></a>
                    </p>
                    <br />
                    <hr />
                    <br />

                    <h1> Oficjalny </h1>
                    <p class="display-2">
                        <i class="fa fa-envelope fa-fw"></i>
                        knkredek @@ gmail.com
                    </p>
                </div>
                <br />
                @await Html.PartialAsync("PartialTemplates/_ContactPartial")
            }
            break;
        case "Course":
            {
                string textInfo0 = "Informacje ogólne";
                string textInfo1 = "Kurs rozpoczniemy od zajęć umożliwiających poznanie środowiska Visual Studio oraz narzędzi, z których będziemy korzystać w trakcie kursu. Przedstawione zostaną informacje na temat składni języka, słów kluczowych oraz konstrukcji występujących w języku C#. Już po pierwszych zajęciach nie będą Ci obce elementy takie jak: zmienne, pętle, funkcje,operatory, komentarze i wiele innych.";
                string textInfo2 = "Kolejne zajęcia pozwolą Wam na zdobycie wiedzy z zakresu programowania obiektowego, z którego będziemy korzystać przez resztę kursu. Zaznajomimy się między innymi z klasami, interfejsami, metodami, dziedziczeniem, polimorfizmem, hermetyzacją.";
