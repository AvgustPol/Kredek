                    Text = "W kolejnej edycji programowania poruszymy następujące tematy, które poprowadzą eksperci w swojej dziedzinie.",
                    ImageUrl = "https://scontent-frx5-1.xx.fbcdn.net/v/t1.0-9/s960x960/76644600_2526809937426217_745322425247334400_o.jpg?_nc_cat=107&_nc_oc=AQnbvCWsKpOyD7lyF84ma4DJEMF0_de0xpemnQ0_1kwLkSLr8takyyAwJ_ndbKGhWtU&_nc_ht=scontent-frx5-1.xx&oh=6b05c0d09eb1ecaa89c624fb2fb2ea54&oe=5E8556D6",
