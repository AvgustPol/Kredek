@using Kredek.Data.Models.ContentElementTranslationTemplates
@model IndexModel

@foreach (var element in Model.CurrentPageElementsWithTranslations)
{

    var elementTranslation = element.ContentElementTranslations.FirstOrDefault();
    if (elementTranslation is TextSeparatedByLine modelTextSeparatedByLine)
    {
        @await Html.PartialAsync("PartialTemplates/_TextSeparatedByLinePartial", modelTextSeparatedByLine)
    }
    else if (elementTranslation is ImageAndTextLeft modelImageAndTextLeft)
    {
        @await Html.PartialAsync("PartialTemplates/_ImageAndTextLeft", modelImageAndTextLeft)
    }
}